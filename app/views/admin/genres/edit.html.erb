<div class="container">
  <div class="row">
   <style>
    label {
     padding-right: 5%;
    }

    .field_with_errors {
     display: contents;
    }

    /* タブレット縦置きサイズ（768px）以下の際に適用される設定 */
    @media screen and (max-width: 768px) {
     h3 {
      font-size: 18px;
     }

     .field, .btn-success {
      font-size: 13px;
     }
    }
   </style>

   <div class="col-12">
    <h3 style="padding: 10px 0 30px 5%;">
     <span style="background-color: #e6dcdf;">
      ジャンル編集
     </span>
    </h3>

    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
     <div class="field">
      <label for="admin_genre">ジャンル名</label>
      <%= f.text_field :name, size: "15" %>
      <%= f.submit "変更を保存", class: "btn btn-success offset-1" %>
     </div>
    <% end %>

   </div>
  </div>
</div>