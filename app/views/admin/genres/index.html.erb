<div class="container">
 <div class="row">
  <style>
   span {
    background-color: #e6dcdf;
    display: inline;
   }

   label {
    padding-right: 5%;
   }

   table {
    padding-top: 20px;
   }
  </style>

  <div class="col-12">
   <h3 style="padding: 10px 0 30px 5%;">
    <span>ジャンル一覧・追加</span>
   </h3>

   <%= form_with model: @newgenre do |f| %>
    <div class="field">
     <label for="admin-genre">ジャンル名</label>
     <%= f.text_field :name %>

     <%= f.submit "新規登録", class: "btn btn-success offset-1" %>
    </div>
   <% end %>
  </div>

  <div class="col-6">
   <table class="table table-hover table-inverse">
    <thead>
     <th>ジャンル</th>
     <th></th>
     <th></th>
    </thead>
   </table>
  </div>



 </div>
</div>
