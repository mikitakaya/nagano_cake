<div class="container">
 <div class="row">
  <style>
   span {
    background-color: #e6dcdf;
    display: inline;
   }

   label {
    padding-right: 5%;
   }

   table {
    margin-top: 20px;
   }

   thead {
    color : rgba(0, 0, 0, 0.6);
    background-color: #e6dcdf;
   }
  </style>

  <div class="col-12">
   <h3 style="padding: 10px 0 30px 5%;">
    <span>ジャンル一覧・追加</span>
   </h3>

   <%= form_with model: @genre do |f| %>
    <div class="field">
     <label for="admin-genre">ジャンル名</label>
     <%= f.text_field :name %>

     <%= f.submit "新規登録", class: "btn btn-success offset-1" %>
    </div>
   <% end %>
  </div>

  <div class="col-5">
   <table class="table table-hover table-inverse">

    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @genres.each do |genre| %>
     <tr>
      <td>
       <%= genre.name %>
      </td>
      <td>
       <%= link_to "編集する", edit_admin_genre_path(@genre.id) %>
      </td>
     </tr>
     <% end %>
    </tbody>

   </table>
  </div>



 </div>
</div>
