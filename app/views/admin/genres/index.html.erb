<div class="container">
 <div class="row">
  <style>
   label {
    padding-right: 5%;
   }

   table {
    margin-top: 20px;
   }

   thead {
    color: rgba(0, 0, 0, 0.6);
    background-color: #e6dcdf;
   }
  </style>

  <div class="col-lg-12 col-md-10 col-sm-8">
   <h3 style="padding: 10px 0 30px 5%;">
    <span style="background-color: #e6dcdf;">ジャンル一覧・追加</span>
   </h3>

   <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="field">
     <label for="admin-genre">ジャンル名</label>
     <%= f.text_field :name %>
     <%= f.submit "新規登録", class: "btn btn-success offset-1" %>
    </div>
   <% end %>
  </div>

  <div class="col-lg-4 col-md-6 col-sm-6">
   <table class="table table-inverse">

    <thead>
     <tr>
      <th>ジャンル</th>
      <th></th>
     </tr>
    </thead>

    <tbody style="color: rgba(0, 0, 0, 0.6);">
     <% @genres.each do |genre| %>
     <tr>
      <td>
       <%= genre.name %>
      </td>
      <td>
       <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success offset-1" %>
      </td>
     </tr>
     <% end %>
    </tbody>

   </table>
  </div>

 </div>
</div>
