<div class="container">
 <div class="row">
  <style>
   thead {
    color: rgba(0, 0, 0, 0.6);
    background-color: #e6dcdf;
   }

   .pagination {
    justify-content: center;
   }

   .page, .current, .next, .last, .first, .prev {
    margin-right: 10px;
   }
  </style>

  <div class="col-lg-10 mx-auto">
   <h3 style="padding: 10px 0 30px">
    <span style="background-color: #e6dcdf;">
     注文履歴一覧
    </span>
   </h3>

   <table class="table table-inverse">
    <thead>
     <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
     </tr>
    </thead>

    <tbody style="color: rgba(0, 0, 0, 0.6);">
    <% @orders.each do |order| %>
     <tr>
      <!-- 購入日時 -->
      <td>
       <!--%= link_to l order.created_at, admin_order_path(order.id) %>-->-->
      </td>

      <!-- 購入者 -->
      <td>
       <!--%= order.customer.full_name %>-->-->
      </td>

      <!-- 注文個数 -->
      <td>
        <!--%= order.order_details.quantity %>-->
      </td>

      <!-- 注文ステータス -->
      <td>
       <!--%= order.order_status_i18n %>-->
      </td>
     </tr>
    <% end %>

    </tbody>
   </table>

   <!-- ページネーション -->
   <%= paginate @orders %>
  </div>
 </div>
</div>