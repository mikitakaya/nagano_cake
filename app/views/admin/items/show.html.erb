<div class="container">
 <div class="row">
  <style>
   label {
    width: 140px;
   }

   .input_wrap {
    margin: 5% 0 0 15%;
   }
  </style>

  <div class="col-lg-12 mx-auto">
   <h3 style="padding: 10px 0 30px 5%;">
    <span style="background-color: #e6dcdf;">商品詳細</span>
   </h3>
  </div>

  <div class="col-lg-5", style="margin-bottom: 30px;">
   <%= image_tag @item.image, size: "400x300" %>
  </div>

  <div class="col-lg-6 ofset-1">
   <div class="field">
    <label for="admin_item_name">商品名</label>
    <%= @item.name %>
   </div>

   <div class="field">
    <label for="admin_item_introduction">商品説明</label>
    <%= @item.introduction %>
   </div>

   <div class="field">
    <label for="admin_item_genre">ジャンル</label>
    <%= @item.genre.name %>
   </div>

   <div class="field">
    <label for="admin_item_price">税込価格</br>(税抜価格)</label>
    <%= @item.price.to_s(:delimited) %> 円
   </div>

   <div class="field">
    <label for="admin_item_is_active">販売ステータス</label>
    <%= @item.is_active_i18n %>
   </div>

   <div class="input_wrap">
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
   </div>

  </div>
 </div>
</div>