<div class="container">
 <div class="row">
  <style>
   label {
    width: 150px;
    margin: 15px 0;
   }

   .text_field {
    width: 60%;
   }

   h3 {
    padding: 20px 0 20px 5%;
   }
  </style>

  <div class="col-lg-10 offset-1">
   <h3>
    <span style="background-color: #e6dcdf;">
     管理者ログイン
    </span>
   </h3>
  </div>

  <div class="mx-auto", style="width: 60%">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
     <label for="admin_email">メールアドレス</label>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field" %>
    </div>

    <div class="field">
     <label for="admin_password">パスワード</label>
     <%= f.password_field :password, autocomplete: "current-password", class: "text_field" %>
    </div>

    <div class="actions">
     <label></label>
     <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
   <% end %>
  </div>
 </div>
</div>

<%= render "admin/shared/links" %>
