<div class="container">
 <div class="row">
  <style>
   label {
    width: 220px;
   }

   .address {
    width: 55%;
   }

   .btn-success {
    float: right;
   }

  </style>

  <div class="col-lg-8">
   <div class="new_address">
    <h3 style="padding: 10px 0 2% 10%">
    <span style="background-color: #e6dcdf;">
      配送先登録／一覧
     </span>
    </h3>

    <%= form_with model: @address, url: addresses_path do |f| %>
     <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code %>
     </div>

     <div class="field">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, class: "address" %>
     </div>

     <div class="field">
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %>
      <%= f.submit "新規登録", class: "btn btn-success" %>
     </div>
    <% end %>
    
    <
   </div>
  </div>
 </div>
</div>