<div class="container">
 <div class="row">
  <style>
   table {
    width: 100%;
   }
   table, th, td {
    border: solid rgba(0, 0, 0, 0.6);
   }

   td {
    background-color: #fbf5f7;
   }

   th {
    padding: 15px 10px;
   }

   td {
    padding: 5px 10px;
   }

  </style>

  <div class="col-lg-12 mx-auto">
   <h3 style="padding: 10px 0 2% 10%;">
    <span style="background-color: #e6dcdf;">
     注文履歴一覧
    </span>
   </h3>

   <table>
    <thead style="background-color: #e6dcdf;">
     <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
     </tr>
    </thead>

    <tbody style="color: rgba(0, 0, 0, 0.6);">
     <% @orders.each do |order| %>
     <tr>
       <!-- 注文日 -->
       <td style="width: 14%;">
        <%= order.created_at.strftime('%Y/%m/%d') %>
       </td>

       <!-- 配送先 -->
       <td style="width: 30%;">
        <!-- 郵便番号 -->
        〒<%= order.postal_code %></br>
        <!-- 住所 -->
        <%= order.address %></br>
        <!-- 宛名 -->
        <%= order.name %>
       </td>

       <!-- 注文商品 -->
       <td style="width: 20%;">
        <% order.order_details.each do |order_detail| %>
         <%= order_detail.item.name %></br>
        <% end %>
       </td>

       <!-- 支払金額 -->
       <td style="width: 12%;">
        <%= order.bill.to_s(:delimited) %>円
       </td>

       <!-- ステータス -->
       <td style="width: 12%;">
        <%= order.order_status_i18n %>
       </td>

       <td style="width: 12%; text-align: center;">
        <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
        <!--%= link_to "削除", destroy_order_path(order.id), method: :delete %>-->
       </td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>